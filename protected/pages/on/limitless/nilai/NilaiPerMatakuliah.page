<%@ Title="Nilai Per Matakuliah" %>
<com:TContent ID="moduleheader">    
    <i class="icon-blog position-left"></i> <span class="text-semibold">Nilai Per Matakuliah</span>
</com:TContent>
<com:TContent ID="modulebreadcrumb">    
    <li class="active">NILAI PER MATAKULIAH</li>
</com:TContent>
<com:TContent ID="sidebarcontent">
<div class="sidebar sidebar-main sidebar-default sidebar-separate">
    <div class="sidebar-content" style="margin-right:5px">                    
        <%include Application.layouts.limitless.FilterMode6%>
        <%include Application.layouts.limitless.OutputReportMode1%>
    </div>
</div>
</com:TContent>
<com:TContent ID="maincontent">
<com:THiddenField ID="hiddenid" />
<com:TPanel Visible="<%= $this->getViewProcess(false) %>" CssClass="row">
    <div class="col-md-12">
        <div class="panel panel-flat border-top-lg border-top-info border-bottom-info">
            <div class="panel-heading">
                <h5 class="panel-title"><i class="icon-search4 position-left"></i> Pencarian Data</h5>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-2 control-label">Kriteria :</label>
                        <div class="col-md-2">
                            <com:TDropDownList ID="cmbKriteria" CssClass="form-control">
                                <com:TListItem Value="kmatkul" Text="Kode Matakuliah" />
                                <com:TListItem Value="nmatkul" Text="Nama Matakuliah" />
                                <com:TListItem Value="nidn" Text="NIDN" />
                                <com:TListItem Value="nama_dosen" Text="Nama Dosen" />
                            </com:TDropDownList>
                        </div>
                    </div>
                    <div class="form-group" id="divtxtKriteria">
                        <label class="col-md-2 control-label">Isi Kriteria :</label>
                        <div class="col-md-3">
                            <com:TActiveTextBox ID="txtKriteria" CssClass="form-control" />                                                                            
                            <com:TRequiredFieldValidator ID="spanKriteriaValidator2" ValidationGroup="filterForm" Display="Dynamic" ControlToValidate="txtKriteria" ErrorMessage="Input apa yang Anda cari, sesuai dengan kriteria yang Anda tentukan." FocusOnError="true" CssClass="has-error help-block">	
                                <prop:ClientSide.OnValidationError>
                                    $('divtxtKriteria').addClassName('has-error');
                                    jQuery('#<%=$this->spanKriteriaValidator2->ClientID%>').removeAttr('style');                                
                                </prop:ClientSide.OnValidationError>
                                <prop:ClientSide.OnValidationSuccess>
                                    $('divtxtKriteria').removeClassName('has-error');
                                </prop:ClientSide.OnValidationSuccess>
                            </com:TRequiredFieldValidator>                                         
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-9">
                            <com:TActiveCustomButton ID="btnSearch" CssClass="btn btn-info btn-labeled btn-xs"  OnClick="Page.searchRecord" ValidationGroup="filterForm" Attributes.Title="Cari">
                                <prop:Text>                                        
                                    <b><i class="icon-search4"></i></b> Cari                                        
                                </prop:Text>
                                <prop:ClientSide.OnPreDispatch>         
                                    Pace.stop();
                                    Pace.start(); 
                                    $('<%=$this->btnSearch->ClientId%>').disabled='disabled';
                                </prop:ClientSide.OnPreDispatch>
                                <prop:ClientSide.OnLoading>
                                    $('<%=$this->btnSearch->ClientId%>').disabled='disabled';						
                                </prop:ClientSide.OnLoading>
                                <prop:ClientSide.OnComplete>																	
                                    $('<%=$this->btnSearch->ClientId%>').disabled='';
                                </prop:ClientSide.OnComplete>
                            </com:TActiveCustomButton>  
                        </div>
                    </div>    
                </div>
            </div>
            <com:TLabel ID="errormessage" />
        </div>        
    </div>  
    <div class="col-md-12">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title"><i class="icon-blog position-left"></i>  DAFTAR MATAKULIAH <com:TActiveLabel ID="lblModulHeader" /></h5>                
                <div class="heading-elements">
                    <div class="heading-btn">
                        
                    </div>   
                </div>
            </div> 
            <div class="table-responsive">
                <com:TActiveRepeater ID="RepeaterS" DataKeyField="idpenyelenggaraan">
                    <prop:HeaderTemplate>
                    <table class="table table-striped table-hover">
                        <thead>			
                        <tr class="bg-teal-700">
                            <th width="15" scope="col">NO</th>
                            <th width="15" scope="col">ID</th>
                            <th width="15" scope="col">KODE</th>
                            <th width="250" scope="col">NAMA</th>
                            <th width="15" scope="col">SKS</th>
                            <th width="15" scope="col">SMT</th>
                            <th width="250" scope="col">DOSEN PENGAMPU UTAMA</th>
                            <th width="90" scope="col">JUMLAH PESERTA</th>
                        </tr>	
                        </thead>		
                        <tbody>		
                    </prop:HeaderTemplate>
                    <prop:ItemTemplate>	
                        <tr>
                            <td><%# $this->Data['no']%></td>
                            <td><%# $this->Data['idpenyelenggaraan']%></td>
                            <td><%# $this->Page->Demik->getKMatkul($this->Data['kmatkul'])%></td>
                            <td><%# $this->Data['nmatkul']%></td>
                            <td><%# $this->Data['sks']%></td>
                            <td><%# $this->Data['semester']%></td>                                
                            <td>
                                <%# $this->Data['nama_dosen']%>
                            </td>
                            <td>
                                <a href="<%#$this->Page->constructUrl('nilai.NilaiPerMatakuliah',true,array('id'=>$this->DataItem['idpenyelenggaraan']))%>" class="table-link" title="Daftar Peserta Matakuliah">                                        
                                    <%# $this->Data['jumlah_peserta']%>
                                </a>
                            </td>
                        </tr>	
                    </prop:ItemTemplate>	                        
                    <prop:FooterTemplate>
                        </tbody>	
                        </table>
                    </prop:FooterTemplate>
                    <prop:EmptyTemplate>                                                       
                        <div class="panel-body">
                            <div class="alert alert-info alert-styled-left alert-bordered">
                                <span class="text-semibold">Info!</span>
                                Belum ada data yang bisa ditampilkan.
                            </div>                
                        </div> 
                    </prop:EmptyTemplate>
                </com:TActiveRepeater>                
            </div>
        </div>
    </div>
</com:TPanel>
<com:TPanel Visible="<%= $this->getDefaultProcess() %>">
    <%include Application.layouts.cube.InfoMatkul%>    
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <header class="main-box-header clearfix">
                    <h2><i class="fa fa-search"></i> Pencarian Data</h2>                    
                </header>
                <div class="main-box-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Kriteria :</label>
                            <div class="col-lg-3">
                                <com:TDropDownList ID="cmbKriteria2" CssClass="form-control">                                                           
                                    <com:TListItem Text="NIM" Value="nim" />
                                    <com:TListItem Text="NIRM" Value="nirm" />
                                    <com:TListItem Text="Nama Mahasiswa" Value="nama" />                                    
                                </com:TDropDownList>
                            </div>
                        </div>
                        <div class="form-group" id="divtxtKriteria">
                            <label class="col-lg-2 control-label">Isi Kriteria :</label>
                            <div class="col-lg-4">
                                <com:TActiveTextBox ID="txtKriteria2" CssClass="form-control" />                                                                            
                                <com:TRequiredFieldValidator ID="spanKriteriaValidator3" ValidationGroup="filterForm" Display="Dynamic" ControlToValidate="txtKriteria" ErrorMessage="Input apa yang Anda cari, sesuai dengan kriteria yang Anda tentukan." FocusOnError="true" CssClass="has-error help-block">	
                                    <prop:ClientSide.OnValidationError>
                                        $('divtxtKriteria').addClassName('has-error');
                                        jQuery('#<%=$this->spanKriteriaValidator3->ClientID%>').removeAttr('style');                                
                                    </prop:ClientSide.OnValidationError>
                                    <prop:ClientSide.OnValidationSuccess>
                                        $('divtxtKriteria').removeClassName('has-error');
                                    </prop:ClientSide.OnValidationSuccess>
                                </com:TRequiredFieldValidator>                                         
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <com:TActiveCustomButton ID="btnSearch2" CssClass="btn btn-info"  OnClick="Page.searchRecord" ValidationGroup="filterForm" Attributes.Title="Cari">
                                    <prop:Text>                                        
                                        <i class="fa fa-search"></i> Cari                                        
                                    </prop:Text>
                                    <prop:ClientSide.OnPreDispatch>         
                                        $('loading').show();
                                    </prop:ClientSide.OnPreDispatch>
                                    <prop:ClientSide.OnLoading>
                                        $('<%=$this->btnSearch2->ClientId%>').disabled='disabled';						
                                    </prop:ClientSide.OnLoading>
                                    <prop:ClientSide.OnComplete>																	
                                        $('<%=$this->btnSearch2->ClientId%>').disabled='';						                               						                                        
                                        $('loading').hide();
                                    </prop:ClientSide.OnComplete>
                                </com:TActiveCustomButton>  
                            </div>
                        </div>    
                    </div>
                </div>
            </div>
        </div>
    </div>	
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <header class="main-box-header clearfix">
                     <h2 class="pull-left"><i class="fa fa-user"></i> Daftar Peserta Matakuliah</h2> 
                     <div class="filter-block pull-right">                        
                        <a href="<%=$this->Page->constructUrl('perkuliahan.Penyelenggaraan',true)%>" class="btn btn-default pull-right" title="Keluar">                                        
                            <i class='fa  fa-times fa-lg'></i>
                        </a>                         
                     </div>
                </header>
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <com:TActiveRepeater ID="RepeaterS2" AllowPaging="true" AllowCustomPaging="true" DataKeyField="nim">
                            <prop:HeaderTemplate>
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th scope="col">NO`</th>                                    
                                    <th scope="col">NIM</th>					
                                    <th scope="col">NAMA</th>
                                    <th scope="col">JK</th>
                                    <th scope="col">TAHUN MASUK</th>					
                                    <th scope="col">KET</th>
                                </tr>	
                                </thead>		
                                <tbody>		
                            </prop:HeaderTemplate>
                            <prop:ItemTemplate>	
                                <tr>
                                    <td><%# $this->DataItem['no']%></td>                                    
                                    <td><a href="<%=$this->Page->constructUrl('kemahasiswaan.ProfilMahasiswa',true,array('id'=>$this->DataItem['nim']))%>"><%#$this->DataItem['nim']%></a></td>					
                                    <td><%# $this->DataItem['nama_mhs']%></td>
                                    <td><%# $this->DataItem['jk']%></td>
                                    <td><%# $this->DataItem['tahun_masuk']%></td>
                                    <td><%# $this->DataItem['status']%></td>					
                                </tr>	
                            </prop:ItemTemplate>	                       
                            <prop:FooterTemplate>
                            </tbody>				
                            </table>
                        </prop:FooterTemplate>
                        <prop:EmptyTemplate>                                                       
                            <div class="row">
                                <div class="main-box-body">
                                    <div class="alert alert-info">
                                        <i class="fa fa-info-circle fa-fw fa-lg"></i>
                                        <strong>
                                            Info!
                                        </strong>
                                         Tidak ada data yang bisa ditampilkan.
                                    </div>
                                </div>
                            </div>
                        </prop:EmptyTemplate>
                        </com:TActiveRepeater>
                    </div>
                </div>
            </div>
        </div>
    </div>
</com:TPanel>
</com:TContent>