<%@ Title="Stop Input Nilai" %>
<com:TContent ID="moduleheader">    
    <i class="icon-blog position-left"></i> <span class="text-semibold">Stop Input Nilai <com:TActiveLabel ID="lblModulHeader" /></span>
</com:TContent>
<com:TContent ID="modulebreadcrumb">    
    <li class="active">NILAI FINAL</li>
</com:TContent>
<com:TContent ID="sidebarcontent">
<div class="sidebar sidebar-main sidebar-default sidebar-separate" style="width:330px">
    <div class="sidebar-content" style="margin-right:5px">                    
        <%include Application.layouts.limitless.FilterMode6%>
    </div>
</div>
</com:TContent>
<com:TContent ID="maincontent">			
<com:TPanel Visible="<%= $this->getDefaultProcess() %>" CssClass="row">
    <div class="col-md-12">
        <div class="panel panel-flat border-top-lg border-top-info border-bottom-info">
            <div class="panel-heading">
                <h5 class="panel-title"><i class="icon-search4 position-left"></i> Pencarian Data</h5>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-2 control-label">Kriteria :</label>
                        <div class="col-md-2">
                            <com:TDropDownList ID="cmbKriteria" CssClass="form-control">
                                <com:TListItem Value="kmatkul" Text="Kode Matakuliah"/>
                                <com:TListItem Value="nmatkul" Text="Nama Matakuliah" />
                                <com:TListItem Value="dosen" Text="Nama Dosen" />
                            </com:TDropDownList>
                        </div>
                    </div>
                    <div class="form-group" id="divtxtKriteria">
                        <label class="col-md-2 control-label">Isi Kriteria :</label>
                        <div class="col-md-3">
                            <com:TActiveTextBox ID="txtKriteria" CssClass="form-control" />                                                                            
                            <com:TRequiredFieldValidator ID="spanKriteriaValidator" ValidationGroup="filterForm" Display="Dynamic" ControlToValidate="txtKriteria" ErrorMessage="Input apa yang Anda cari, sesuai dengan kriteria yang Anda tentukan." FocusOnError="true" CssClass="has-error help-block">	
                                <prop:ClientSide.OnValidationError>
                                    $('divtxtKriteria').addClassName('has-error');
                                    jQuery('#<%=$this->spanKriteriaValidator->ClientID%>').removeAttr('style');                                
                                </prop:ClientSide.OnValidationError>
                                <prop:ClientSide.OnValidationSuccess>
                                    $('divtxtKriteria').removeClassName('has-error');
                                </prop:ClientSide.OnValidationSuccess>
                            </com:TRequiredFieldValidator>                                         
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-9">
                            <com:TActiveCustomButton ID="btnSearch" CssClass="btn btn-info btn-labeled btn-xs"  OnClick="Page.searchRecord" ValidationGroup="filterForm" Attributes.Title="Cari">
                                <prop:Text>                                        
                                    <b><i class="icon-search4"></i></b> Cari                                        
                                </prop:Text>
                                <prop:ClientSide.OnPreDispatch>         
                                    Pace.stop();
                                    Pace.start(); 
                                    $('<%=$this->btnSearch->ClientId%>').disabled='disabled';
                                </prop:ClientSide.OnPreDispatch>
                                <prop:ClientSide.OnLoading>
                                    $('<%=$this->btnSearch->ClientId%>').disabled='disabled';						
                                </prop:ClientSide.OnLoading>
                                <prop:ClientSide.OnComplete>																	
                                    $('<%=$this->btnSearch->ClientId%>').disabled='';
                                </prop:ClientSide.OnComplete>
                            </com:TActiveCustomButton>  
                        </div>
                    </div> 
                </div>                
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title"><i class="icon-blog position-left"></i>  DAFTAR DOSEN PENGAJAR</h5>                
                <div class="heading-elements">
                                  
                </div>
            </div> 
            <div class="table-responsive">
                <com:TActiveRepeater ID="RepeaterS" DataKeyField="idpengampu_penyelenggaraan" AllowPaging="true" PageSize="10" AllowCustomPaging="true">
                    <prop:HeaderTemplate>					
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr class="bg-teal-700">
                            <th>NO</th>
                            <th>NAMA DOSEN</th>
                            <th>KODE</th>
                            <th>NAMA MATAKULIAH</th>
                            <th>SKS</th>
                            <th>SMT</th>										
                            <th>JUMLAH <br />KELAS</th>					
                            <th width="170">AKSI</th>
                        </tr>
                        </thead>
                        <tbody>
                    </prop:HeaderTemplate>
                    <prop:ItemTemplate>
                        <tr>
                            <td><%# $this->DataItem['no']%></td>
                            <td><%# $this->DataItem['nama_dosen']%></td>
                            <td><%# $this->DataItem['kmatkul']%></td>
                            <td><%# $this->DataItem['nmatkul']%></td>
                            <td><%# $this->DataItem['sks']%></td>
                            <td><%# $this->DataItem['semester']%></td>										
                            <td><%# $this->DataItem['jumlahKelas']%></td>	
                            <td>
                                <ul class="nav nav-pills nav-pills-toolbar nav-justified">
                                    <li<%# ($this->DataItem['verified']==0)?' class="active"':''%>>
                                        <com:TActiveLinkButton ID="btnUnVerified" CommandParameter="<%# ($this->DataItem['verified']==true)?0:1%>" OnClick="Page.doVerified" Attributes.Title="Boleh Input" ClientSide.PostState="false" Enabled="<%#$this->DataItem['verified']==1%>">
                                            <prop:Text>                                        
                                                ACTIVE
                                            </prop:Text>
                                            <prop:ClientSide.OnPreDispatch>         
                                                Pace.stop();
                                                Pace.start(); 
                                                $('<%=$this->btnUnVerified->ClientId%>').disabled='disabled';
                                            </prop:ClientSide.OnPreDispatch>
                                            <prop:ClientSide.OnLoading>
                                                $('<%=$this->btnUnVerified->ClientId%>').disabled='disabled';						
                                            </prop:ClientSide.OnLoading>
                                            <prop:ClientSide.OnComplete>																	
                                                $('<%=$this->btnUnVerified->ClientId%>').disabled='';
                                            </prop:ClientSide.OnComplete>
                                        </com:TActiveLinkButton>  
                                    </li>
                                    <li<%# ($this->DataItem['verified']==1)?' class="active"':''%>>
                                         <com:TActiveLinkButton ID="btnVerified" CommandParameter="<%# ($this->DataItem['verified']==true)?0:1%>" OnClick="Page.doVerified" Attributes.Title="TIdak Boleh Input" ClientSide.PostState="false" Enabled="<%#$this->DataItem['verified']==0%>">
                                            <prop:Text>                                        
                                                INACTIVE
                                            </prop:Text>
                                            <prop:ClientSide.OnPreDispatch>         
                                                Pace.stop();
                                                Pace.start(); 
                                                $('<%=$this->btnVerified->ClientId%>').disabled='disabled';
                                            </prop:ClientSide.OnPreDispatch>
                                            <prop:ClientSide.OnLoading>
                                                $('<%=$this->btnVerified->ClientId%>').disabled='disabled';						
                                            </prop:ClientSide.OnLoading>
                                            <prop:ClientSide.OnComplete>																	
                                                $('<%=$this->btnVerified->ClientId%>').disabled='';
                                            </prop:ClientSide.OnComplete>
                                        </com:TActiveLinkButton> 
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </prop:ItemTemplate>
                    <prop:FooterTemplate>				
                        </tbody>
                        </table>				
                    </prop:FooterTemplate>
                    <prop:EmptyTemplate>                                                       
                        <div class="panel-body">
                            <div class="alert alert-info alert-styled-left alert-bordered">
                                <span class="text-semibold">Info!</span>
                                Belum ada data yang bisa ditampilkan.
                            </div>                
                        </div>    
                    </prop:EmptyTemplate>
                </com:TActiveRepeater>
                <%include Application.layouts.limitless.CustomPaging%>
            </div>
        </div>
    </div>
</com:TPanel>
</com:TContent>