<%@ Title="Akademik - Detail Transkrip Sementara" %>
<com:TContent ID="moduleheader">
    <i class="fa fa-book"></i> Detail Transkrip Sementara
</com:TContent>
<com:TContent ID="modulebreadcrumb">    
    <li><a href="#">AKADEMIK</a></li>
    <li><a href="#">NILAI</a></li>
    <li><a href="<%=$this->constructUrl('nilai.TranskripSementara',true)%>">TRANSKRIP SEMENTARA</a></li>
    <li class="active"><span>DETAIL TRANSKRIP SEMENTARA</span></li>
</com:TContent>
<com:TContent ID="configtools">
<div id="config-tool" class="closed">
    <a id="config-tool-cog">
        <i class="fa fa-cog"></i>
    </a>
    <div id="config-tool-options">
        <h4>OPTION</h4>        
        <br/>
        <h4 style="font-size:12px"><strong>Output Report:</strong></h4>
        <ul id="skin-colors" class="clearfix">
            <li style="font-size:10px">
               <com:TActiveDropDownList ID="tbCmbOutputReport" OnSelectedIndexChanged="Page.changeOutputReport" CssClass="form-control">
					<prop:ClientSide.OnPreDispatch>
						$('loading').show();
					</prop:ClientSide.OnPreDispatch>
                   <prop:ClientSide.OnLoading>
                        $('<%=$this->tbCmbOutputReport->ClientId%>').disabled='disabled';
                    </prop:ClientSide.OnLoading>
					<prop:ClientSide.onComplete>
						$('loading').hide();
                        $('<%=$this->tbCmbOutputReport->ClientId%>').disabled='';
					</prop:ClientSide.OnComplete>	
				</com:TActiveDropDownList>
            </li>            
        </ul>
    </div>
</div>
</com:TContent>
<com:TContent ID="csscontent">
<link rel="stylesheet" type="text/css" href="<%=$this->Theme->baseUrl%>/css/libs/nifty-component.css"/>
</com:TContent>
<com:TContent ID="maincontent">
<com:TPanel Visible="<%= $this->getViewProcess(false) %>" CssClass="row">                    
    <div class="col-lg-12">
        <div class="main-box clearfix">               
            <header class="main-box-header clearfix">
                <div class="icon-box pull-right">                                       
                    <a class="btn pull-left" href="<%=$this->constructUrl('nilai.TranskripSementara',true)%>">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </header>
            <div class="main-box-body">
                <div class="alert alert-warning">
                    <i class="fa fa-info-circle fa-fw fa-lg"></i>
                    <strong>
                        Info!
                    </strong>
                     <com:TLiteral ID="errorMessage" />
                </div>
            </div>            
        </div>
    </div>
</com:TPanel>
<com:TPanel Visible="<%= $this->getDefaultProcess() %>">
    <%include Application.layouts.cube.DataMHS%>
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <header class="main-box-header clearfix">
                    <h2 class="pull-left"><i class="fa fa-book"></i> Daftar Nilai Transkrip Sementara</h2> 
                    
                    <div class="filter-block pull-right">                                                   
                        <com:TActiveLinkButton ID="btnPrintTranskripSementara" OnClick="printOut" ClientSide.PostState="false" CssClass="btn btn-primary pull-left" Attributes.Title="Print Out Transkrip Sementara">
                            <prop:Text><i class="fa fa-print fa-lg"></i></prop:Text>
                            <prop:ClientSide.OnPreDispatch>
                                $('loading').show();
                            </prop:ClientSide.OnPreDispatch>
                            <prop:ClientSide.OnLoading>
                                $('<%=$this->btnPrintTranskripSementara->ClientId%>').disabled='disabled';				
                            </prop:ClientSide.OnLoading>
                            <prop:ClientSide.OnComplete>
                                $('<%=$this->btnPrintTranskripSementara->ClientId%>').disabled='';				
                                $('loading').hide();
                            </prop:ClientSide.OnComplete>
                        </com:TActiveLinkButton>  				
                        <a class="btn btn-default pull-right" href="<%=$this->constructUrl('nilai.TranskripSementara',true)%>" title="Keluar Detail Transkrip Sementara">                        
                            <i class='fa  fa-times fa-lg'></i>
                        </a>
                    </div>
                </header>
                <div class="main-box-body clearfix">
                    <div class="alert alert-block alert-info">
                        <h4><i class="fa fa-info-circle fa-fw fa-lg"></i><strong>Informasi!</strong> </h4>
                        <p>
                            <ul>
                                <li>Matakuliah Konsentrasi tidak ditampilkan selama Mahasiswa belum mendaftar konsentrasi.</li>
                                <li>Saat mencetak Transkrip Nilai Sementara, Matakuliah pilihan dan lintas prodi tidak akan ditampilkan bila tidak ada nilai-nya.</li>
                            </ul>
                        </p>
                    </div>
                    <div class="table-responsive">
                        <com:TActiveRepeater ID="RepeaterS" EnableViewState="false">
                            <prop:HeaderTemplate>		
                                <table class="table table-striped table-hover">	
                                    <thead>
                                    <tr>
                                        <th width="40" scope="col">NO</th>
                                        <th width="40" scope="col">KODE</th>
                                        <th width="250" scope="col">NAMA</th>						
                                        <th width="40" scope="col">SKS</th>						
                                        <th width="40" scope="col">SMT</th>				                                    
                                        <th width="40" scope="col">NILAI</th>
                                        <th width="40" scope="col">KETERANGAN</th>				
                                    </tr>
                                    </thead>
                                    <tbody>
                            </prop:HeaderTemplate>
                            <prop:ItemTemplate>		
                                    <tr>
                                        <td><%# $this->DataItem['no']%></td>
                                        <td><%# $this->Page->Nilai->getKMatkul($this->DataItem['kmatkul'])%></td>
                                        <td><%# $this->DataItem['nmatkul']%></td>
                                        <td><%# $this->DataItem['sks']%></td>
                                        <td><%# $this->DataItem['semester']%></td>								                                    
                                        <td><%# $this->DataItem['n_kual']%></td>
                                        <td><%# $this->DataItem['keterangan']%></td>
                                    </tr>
                            </prop:ItemTemplate>                        
                            <prop:FooterTemplate>
                                    </tbody>
                                    <tfoot>				
                                        <tr>
                                            <td colspan="3"></td>
                                            <td colspan="2"><strong>Jumlah Matkuliah</strong></td>
                                            <td colspan="2">: <%= $this->Page->Nilai->getTotalMatkulAdaNilai()%></td>					
                                        </tr>
                                        <tr>
                                            <td colspan="3"></td>
                                            <td colspan="2"><strong>Jumlah SKS</strong></td>
                                            <td colspan="2">: <%= $this->Page->Nilai->getTotalSKSAdaNilai(true)%></td>					
                                        </tr>                                                                
                                        <tr>
                                            <td colspan="3"></td>
                                            <td colspan="2"><strong>IPK</strong></td>
                                            <td colspan="2">: <%= $this->Page->Nilai->getIPSAdaNilai()%></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </prop:FooterTemplate>
                            <prop:EmptyTemplate>                                                       
                                <div class="row">
                                    <div class="main-box-body">
                                        <div class="alert alert-info">
                                            <i class="fa fa-info-circle fa-fw fa-lg"></i>
                                            <strong>
                                                Info!
                                            </strong>
                                             Tidak ada data yang bisa ditampilkan.
                                        </div>
                                    </div>
                                </div>
                            </prop:EmptyTemplate>
                        </com:TActiveRepeater>
                    </div>
                </div>
            </div>
        </div>
    </div>
</com:TPanel>
<%include Application.layouts.cube.ModalPrintOut%>
</com:TContent>